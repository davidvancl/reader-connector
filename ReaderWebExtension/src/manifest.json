{
    "name": "Reader connector extension",
    "author": "David Vancl",
    "version": "1.0.0",
    "manifest_version": 3,
    "description": "Web extension allows connect from mobile app and use it as bar code reader",
    "options_ui": {
        "page": "index.html",
        "browser_style": false
    },
    "permissions": [
        "storage",
        "scripting",
        "activeTab"
    ],
    "host_permissions": [
        "<all_urls>",
        "*://*/*"
    ],
    "optional_permissions": [
        "<all_urls>"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content/content.js"
            ]
        }
    ],
    "background": {
        "scripts": [
            "background/background.js"
        ],
        "type": "module"
    },
    "action": {
        "default_title": "Reader connector extension",
        "default_popup": "index.html"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    }
}